@model FAQ
@{
    Layout = "~/Views/Shared/_Secured.cshtml";
    ViewBag.Title = "Add FAQ";
    ViewData["MainTitle"] = "Home";
    ViewData["ChildTitle"] = "FAQs";
    ViewData["PageName"] = "FAQs";
}
<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

</head>
<body class="hold-transition sidebar-mini">
    <!-- Main content -->

    <form action="@Url.Action("Add","Faq")" method="post">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-12">
                        <!-- jquery validation -->
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">
                                    <small>

                                        @*@if (Model.id == 0)
                                        {
                                            @Html.Raw("CREATE")
                                        }
                                        else
                                        {
                                            @Html.Raw("UPDATE")
                                        }*@

                                        FAQs
                                    </small>
                                </h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            <form id="quickForm">
                                <div class="card-body">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Question</label>
                                        <div class="form-group">
                                            <input asp-for="Category" class="form-control" />
                                            <span asp-validation-for="Category" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Answer</label>
                                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @placeholder = "Answer" })
                                    </div>

                                </div>
                                <!-- /.card-body -->
                                <div class="card-footer">
                                    <button type="submit" class="btn btn-primary">Submit</button>

                                    <a href="@Url.Action("Index","Faq")" class="btn btn-danger">Cancel</a>
                                </div>
                            </form>
                        </div>
                        <!-- /.card -->
                    </div>
                    <!--/.col (left) -->
                    <!-- right column -->
                    <div class="col-md-6">

                    </div>
                    <!--/.col (right) -->
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>

    </form>
    <!-- /.content -->

</body>
</html>


